@model IEnumerable<BugTracker.Models.EditUserViewModel>

@{
    ViewBag.Title = " System Users";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add New User", "Register")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { name=item.UserName }) |
            @Html.ActionLink("Roles", "UserRoles", new { name=item.UserName }) |
            @Html.ActionLink("Delete", "Delete", new { name=item.UserName })
        </td>
    </tr>
}

</table>
